                                                    <option value="Washington">Washington</option>
                                                    <option value="West Virginia">West Virginia</option>
                                                    <option value="Wisconsin">Wisconsin</option>
                                                    <option value="Wyoming">Wyoming</option>
                                                </select>
                                                <span asp-validation-for="State" id="errorstate" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label asp-for="ZipCode" class="control-label"></label>
                                                <input asp-for="ZipCode" id="zipcode" class="form-control" />
                                                <span asp-validation-for="ZipCode" id="errorzipcode" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="">
                                    <div class="" id="headingTwo">
                                        <div class="form-group form-check" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                                            <input type="checkbox" class="form-check-input" id="two"  asp-for="two">
                                            <label class="form-check-label" for="two">I would like to opt out of promotional phone calls.</label>
                                        </div>
                                    </div>
                                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo">
                                        <div class="card-body px-0 pt-0">
                                            <label class="control-label">Phone Number </label>
                                            <input asp-for="PhoneNumberCall" id="phonenumbercall" class="form-control" />
                                            <span asp-validation-for="PhoneNumberCall" id="errorphonenumbercall" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="">
                                    <div class="" id="headingThree">
                                        <div class="form-group form-check" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                                            <input type="checkbox" class="form-check-input" id="three" asp-for="three">
                                            <label class="form-check-label" for="three">I would like to opt out of promotional text messages.</label>
                                        </div>
                                    </div>
                                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree">
                                        <div class="card-body px-0 pt-0">
                                            <label class="control-label">Phone Number</label>
                                            <input asp-for="PhoneNumberText" id="phonenumbertext" class="form-control" />
