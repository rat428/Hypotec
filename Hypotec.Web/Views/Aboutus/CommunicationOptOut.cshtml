                                    <div class="" id="headingZero">
                                        <div class="form-group form-check" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            <input type="checkbox" class="form-check-input" id="four" asp-for="four" >
                                            <label class="form-check-label" for="four">I would like to opt out of promotional email communications.</label>
                                        </div>
                                    </div>

                                    <div id="collapseOne" class="collapse" aria-labelledby="headingZero">
                                        <div class="card-body px-0 pt-0">
                                            <label class="control-label">Email Address</label>
                                            <input asp-for="EmailAddress" id="emailaddress" class="form-control" />
