@model IEnumerable<Hypotec.Web.Models.ResourceModel>

@{
    ViewData["Title"] = "AllResources";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}
<section class="agentbookingPage">
    <div class="container-fluid">
        @if (ViewBag.Message != null && ViewBag.Message == true)
        {
            <div class="alert alert-success  alert-dismissible fade show">
                <strong>Success!</strong> Removed successfully.
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }
        @if (ViewBag.Message == false)
        {
            <div class="alert alert-danger  alert-dismissible fade show">
                <strong>Failed!</strong> Record not deleted.
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }
        <div class="row">
          
            <div class="col-md-12 my-4">
                <div class="col-md-12">
                    @*<label id="lblshowSelectedVal"> </label>*@
                </div>
                <div class="table-responsive">
                    <table class="table table-striped custom-table custom-table-1">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tag)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Header)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    Image
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        @Html.Raw(@item.Id)
                                    </td>
                                    <td class="text-center">
                                        @Html.Raw(item.Tag)
                                    </td>
                                    <td class="text-center">
                                        @Html.Raw(@item.Header)
                                    </td>
                                    <td class="text-center">
                                        @Html.Raw(@item.Description)
                                    </td>
                                    <td class="text-center roundimg">
                                        <img src="@item.ImagePath" class="" alt="" />
                                    </td>
                                    <td class="text-center anchor-link">
                                        <div class="d-flex">
                                            @Html.ActionLink("", "EditResources", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" })
                                            @Html.ActionLink(
                                            "",
                                            "Delete",
                                            new { id = item.Id },
                                            new { @class = "glyphicon glyphicon-trash", onclick = "return confirm('Are you sure you wish to delete this resource?');" })
                                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>
