@model List<Hypotec.Web.Models.AgentSlotModel>
@{
    ViewData["Title"] = "MortgageAdvisor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start contact us page HTML code -->
<section class="mortadvisorPage">
    <div class="container-fluid">
        @if (ViewBag.Message != null && ViewBag.Message == true)
        {
            <div class="alert alert-success  alert-dismissible fade show">
                <strong>Success!</strong> Slot booked successfully .
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }
        @if (ViewBag.Message == false)
        {
            <div class="alert alert-danger  alert-dismissible fade show">
                <strong>Failed!</strong> Slot book failed .
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }
        <div class="row">
            <div class="col-md-12 col-xl-12">
                <div class="all-caption mortgagetext">
                    <h2>Mortgage <span class="blue-text">Advisor</span></h2>
                    <p>
                        Curious about refinancing your current mortgage?
                        Looking to buy a new home but don’t know where to start?
                        Let Hypotec guide you through the process.  Our knowledgeable team of loan experts are here to help you navigate the
                        waters and secure you the best rates.
                    </p>
                </div>
            </div>
            <div class="col-md-12">
                <div class="twoButton my-4 my-md-4 my-lg-5 my-xl-5">
                    <div class="">
                        <a href='@Url.Action("AgentSlotBooking", "FindAndExpert")' class="btn">Request call back</a>
                        <a href='@Url.Action("Advisor", "Advisor")' class="btn">Find your advisor</a>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="welcomecontent">
                    <h4>How We Can Help </h4>
                    <div class="all-caption resources-text">
                        <p>
                            Rates change on a daily basis.  Whether you’re looking to get preapproved for a home loan or trying to find ways to
                            save money on your current mortgage, our team of expert loan advisors are here to assist.
                        </p>
                        <p>
                            Hypotec works with 100s of different lenders.  What does this mean for you?  It guarantees our team will work hard to
                            secure you the lowest rates possible.  Ask anyone in the industry - it’s wise to shop around to find the best rates
                            available.  Let us do the searching for you.
                        </p>
                        <p>Contact us today to see how you can benefit from the shop around finance experience.</p>
                    </div>
                    <div class="py-5">
                        <div class="d-flex pb-5">
                            <img src="~/images/chat.png" class="img-fluid" alt="" />
                            <div class="">
                                <h6>Customized Solutions </h6>
                                <p class="p-0">We tailor our services to fit what you need and are looking for</p>
                            </div>
                        </div>
                        <div class="d-flex pb-5">
                            <img src="~/images/gray-search.png" class="img-fluid" alt="" />
                            <div class="">
                                <h6>Full Market Access</h6>
                                <p class="p-0">We search the entire market to ensure you receive the best possible rates</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <img src="~/images/lock.png" class="img-fluid" alt="" />
                            <div class="">
                                <h6>Secure Client Portal</h6>
                                <p class="p-0">
                                    Rest easy knowing you’ll have access to your own individual secure portal to upload any needed
                                    documentation
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="all-caption resources-text">
                    <p class="pb-4">
                        Use these quick links to get a quick idea about how much you could borrow and
                        apply today.
                    </p>
                </div>
                <div class="blueBoxIcon text-center">
                    <img src="~/images/calculator.png" class="img-fluid" alt="" />
                    <a href='@Url.Action("PurchaseCalculator", "Calculator")'>
                        <h4>How much can I afford?</h4>
                    </a>
                </div>
                <div class="blueBoxIcon text-center">
                    <img src="~/images/calculator.png" class="img-fluid" alt="" />
                    <a href='@Url.Action("Refinance", "LoanRate")'>
                        <h4>How much can i borrow?</h4>
                    </a>
                </div>
                <div class="blueBoxIcon text-center">
                    <img src="~/images/search.png" class="img-fluid" alt="" />
                    <a href='@Url.Action("Purchase", "LoanRate")'>

                        <h4> Find your mortgage</h4>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end contact us page HTML code -->
